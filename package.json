{
  "name": "interactive-presentations",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:app\" \"npm run dev:extension\"",
    "dev:server": "cd packages/server && npm run dev",
    "dev:app": "cd packages/attendee-app && npm run dev",
    "dev:extension": "cd packages/extension && npm run dev",
    "build": "cd packages/shared && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd packages/server && npm run build",
    "build:app": "cd packages/attendee-app && npm run build",
    "build:extension": "cd packages/extension && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
